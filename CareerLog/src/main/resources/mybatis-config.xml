<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<!-- changes from the defaults -->
		<setting name="lazyLoadingEnabled" value="false" />
	</settings>

	<typeAliases>
		<typeAlias alias="user" type="com.careerlog.entity.User"/>
		<typeAlias alias="loginCommand" type="com.careerlog.entity.loginCommand" />
		<typeAlias alias="friend" type="com.careerlog.entity.Friend"/>
	</typeAliases>

	<mappers>
		<mapper resource="mapper/UserMapper.xml"/>
		<mapper resource="mapper/FriendMapper.xml" />
	</mappers>
</configuration>